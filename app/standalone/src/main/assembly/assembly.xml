<assembly>
  <id>distro</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <!-- Enable access to all projects in the current multi-module build -->
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
  </moduleSets>
  <dependencySets>

    <!-- meta -->
    <dependencySet>
      <outputDirectory>meta</outputDirectory>
      <includes>
        <include>io.syndesis.meta:meta:jar</include>
      </includes>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>

    <!-- server -->
    <dependencySet>
      <outputDirectory>server</outputDirectory>
      <includes>
        <include>io.syndesis.server:server-runtime:jar</include>
      </includes>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- react-ui -->
    <dependencySet>
      <outputDirectory>server/BOOT-INF/classes/static/ui</outputDirectory>
      <includes>
        <include>io.syndesis.ui:ui-react:tar.gz</include>
      </includes>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <includes>
        <include>LICENSE</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>